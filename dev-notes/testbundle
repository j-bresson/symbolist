/layout : {
    /page : {
        /size : [600, 1600],
        /margins : {
            /left : 10,
            /right : 10,
            /top : 10,
            /bottom : 10
        }
    },
    /system : {
        /margin/topbottom : [20, 20],
        /staves : {
            /piccolo : {
                /margin : [10, 10],
                /name : "piccolo"
            },
            /oboe : {
                /margin : [10, 10],
                /name : "oboe"
            },
        }
    }
